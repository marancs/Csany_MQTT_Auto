<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NaviOkt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:NaviOkt.View"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    FlyoutBackgroundColor="Lavender"
    InputTransparent="False"
    Title="MAUI">
    <FlyoutItem Title="MAUI teszt oldal" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
         Shell.NavBarIsVisible="true"   
         Title="Főoldal"
         ContentTemplate="{DataTemplate view:MainPage}"
         Route="MainPage" />
        <ShellContent
         Shell.NavBarIsVisible="true"
         Title="Társas lista"
         ContentTemplate="{DataTemplate view:ListaPage}"
         Route="ListaPage" />
    </FlyoutItem>
    

</Shell>
